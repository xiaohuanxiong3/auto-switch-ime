<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.friday.autoSwitchIME</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>输入法自动切换插件</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="Handsome Young@qq.com" url="https://www.JiaLiDun_Company.com">Handsome Young</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
    输入法自动切换插件.<br>
    输入法自动切换插件.<br>
    输入法自动切换插件.<br>
    输入法自动切换插件.<br>
  ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>
    <depends>org.jetbrains.kotlin</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <!-- 自动切换输入法-->
        <editorFactoryListener implementation="com.sqy.plugins.auto_switch_ime.CustomEditorFactoryListener"/>
        <editorActionHandler action="EditorUp" implementationClass="com.sqy.plugins.auto_switch_ime.cause.ArrowKeysPressedHandler" />
        <editorActionHandler action="EditorDown" implementationClass="com.sqy.plugins.auto_switch_ime.cause.ArrowKeysPressedHandler" />
        <editorActionHandler action="EditorLeft" implementationClass="com.sqy.plugins.auto_switch_ime.cause.ArrowKeysPressedHandler" />
        <editorActionHandler action="EditorRight" implementationClass="com.sqy.plugins.auto_switch_ime.cause.ArrowKeysPressedHandler" />
        <enterHandlerDelegate implementation="com.sqy.plugins.auto_switch_ime.cause.EnterHandler" />
        <typedHandler implementation="com.sqy.plugins.auto_switch_ime.cause.CharTypedHandler" />
        <psi.treeChangeListener implementation="com.sqy.plugins.auto_switch_ime.psi.CustomPsiTreeChangeListener"/>
<!--        <psi.treeChangePreprocessor implementation="com.sqy.plugins.auto_switch_ime.psi.CustomPsiTreeChangePreprocessorListener"/>-->
        <applicationConfigurable instance="com.sqy.plugins.auto_switch_ime.setting.SwitchIMEConfigurable"
                                 displayName="输入法自动切换插件配置"/>
        <notificationGroup displayType="BALLOON"
                           id="auto-switch-ime-plugin"
                           isLogByDefault="false"/>
        <!-- 自动切换输入法-->

        <!-- 自定义复制粘贴处理-->
        <copyPastePreProcessor implementation="com.sqy.plugins.copy.CustomCopyPastePreProcessor" />
        <!-- 自定义复制粘贴处理-->
    </extensions>

    <actions>
        <action id="com.sqy.plugins.auto_switch_ime.action.SwitchAutoSwitchEnableAction"
                class="com.sqy.plugins.auto_switch_ime.action.SwitchAutoSwitchEnableAction"
                text="switch_single_language_auto_switch_enable" description="控制单语言输入法自动切换功能打开和关闭">
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl S"/>
        </action>
    </actions>

<!--    <projectListeners>-->
<!--        <listener class="com.sqy.plugins.auto_switch_ime.CustomAnActionListener" topic="com.intellij.openapi.actionSystem.ex.AnActionListener"/>-->
<!--    </projectListeners>-->

</idea-plugin>